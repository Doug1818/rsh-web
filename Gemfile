  gem 'quiet_assets'
end

group :development, :test do
  gem 'rspec-rails', '~> 2.0'
  gem 'factory_girl_rails', '~> 4.0'
end

group :test do
  gem 'debugger'
  gem 'capybara'
  gem 'selenium-webdriver'
