<%= simple_form_for @alert, html: { class: "form-vertical" } do |f| %>
  <%= f.hidden_field :program_id %>
  <%= f.input :action_type, as: :select, collection: Alert::ACTION_TYPES %>
  <%= f.input :streak, as: :select, collection: 1..7 %>
  <%= f.input :sequence, as: :select, collection: Alert::SEQUENCES %>

  <%= f.submit "Create Alert", class: 'btn btn-primary' %>
<% end %>
