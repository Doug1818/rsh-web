<% (week.start_date..week.end_date).each do |day| %>
  <div style="float: left; margin-right: 3px;">
  <% if week.has_check_in_for_day(day) %>
    <% status = week.find_check_in_for_day(day).status %>
    <div class="check-in status-<%=status%>"></div>
  <% else %>
    <div class="check-in status-<%=CheckIn::STATUSES[:none]%>"></div>
  <% end %>
  <div><%= Date::ABBR_DAYNAMES[day.wday] %></div>
  <div><%= @program.day_number(day) %></div>
  </div>
<% end %>
