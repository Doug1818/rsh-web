<div class="container">
  <div class="well">
    <div class="row">
      <div class="col-md-12">
        <h1>Listing Coaches (<%= @coaches.size %>)</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <% if @coaches.present? %>
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>First</th>
                <th>Last</th>
                <th>Email</th>
                <th>Status</th>
                <th>Role</th>
                <th></th>
              </tr>
            </thead>

            <tbody>
              <% @coaches.each do |coach| %>
              <tr>
                <td><%= coach.first_name %></td>
                <td><%= coach.last_name %></td>
                <td><%= coach.email %></td>
                <td><%= Coach::STATUSES.keys[coach.status] %></td>
                <td><%= coach.role %></td>
                <td>
                  <%= link_to 'edit', edit_coach_path(coach) %> |
                  <%= link_to 'delete', coach, data: { confirm: "Are you sure?" }, method: :delete %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>

          <%#= paginate @users %>
        <% else %>
          <br/>
          <p>No coaches have been created yet.</p>
          <br/>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="pull-right">
          <%= link_to new_coach_path, class: "btn btn-primary" do %>
            <i class="icon-plus-sign"></i> Invite a New Coach</a>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

