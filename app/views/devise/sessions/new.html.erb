<div class="container">
  <div class="well">
    <div class="col-md-12">
      <h2>Sign in</h2>

      <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, :required => false, :autofocus => true, label: false, placeholder: 'Email', type: 'email' %>
          <%= f.input :password, :required => false, label: false, placeholder: 'Password', type: 'password' %>
          <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign in", class: 'btn btn-primary' %>
          <br/><br/>
          <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
        </div>
      <% end %>
    </div>
  </div>
</div>
