<!DOCTYPE html>
<html>
<head>
  <title>Right Side Health</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <script type="text/javascript" src="//use.typekit.net/wfv3edg.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
  <%= yield :script %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <div class="navbar-header col-md-8">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to image_tag('logo.png'), root_path %>
        <% if current_coach %>
        <div class="welcome">
          <div class="top">
            <h4>Welcome, Adam</h4>
          </div>
          <div class="bottom">
            <p><%= link_to 'Sign Out', destroy_coach_session_path, method: :delete %></p>
          </div>
        </div>
        <% end %>
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <% if can? :manage,  current_practice %>
            <li class="<%= 'active' if params[:controller] == 'practice' %>"><%= link_to 'Practice Administration', practice_path(current_practice) %></li>
          <% end %>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if current_coach %>
            <li><%= link_to 'Sign out', destroy_coach_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to 'Sign in for coaches', new_coach_session_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

  <%= render '/common/notification' %>

  <%= yield %>

</body>
</html>
