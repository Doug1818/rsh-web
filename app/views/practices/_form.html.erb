<div class="payment-errors alert alert-error"></div>

<%= simple_form_for @practice, html: { class: "form-vertical" } do |f| %>
  <lengend>Your practice</lengend>
  <%= f.input :name %>

  <lengend>Your account</lengend>
  <%= f.fields_for :coaches do |f| %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
  <% end %>

  <lengend>Billing Info</lengend>
  <div class="form-group string required">
    <label class="string optional control-label">Card Number</label>
    <input class="string optional form-control" maxlength="255" size="255" autocomplete="off" type="text" class="card-number">
  </div>
  <div class="form-group string required">
    <label class="string optional control-label">CVC</label>
    <input class="string optional form-control" maxlength="255" size="255" autocomplete="off" type="text" class="card-cvc">
  </div>
  <div class="form-group string required">
    <label class="string optional control-label">Expiration (MM/YYYY)</label>
    <br/>
    <input class="string optional form-control card-expiry-month" maxlength="2" size="2" autocomplete="off" type="text">
    <span> / </span>
    <input class="string optional form-control card-expiry-year" maxlength="4" size="4" autocomplete="off" type="text">
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
