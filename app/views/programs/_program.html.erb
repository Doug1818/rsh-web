<div class="col-lg-3 col-md-4 col-sm-6">
  <%= link_to program_path(program) do %>
  <div class="well <%= program.activity_status == Program::ACTIVITY_STATUSES[:alert] ? 'alert-client' : 'normal-client' %>">
    <%= image_tag(program.user.avatar.medium.url, height: 123, width: 123, alt: "user avatar") %>
    <h3>
      <% if program.user.hipaa_compliant? %>
        <% user_pii = program.user.get_pii %>
        <%= user_pii['first_name'] %> <%= user_pii['last_name'] %>
      <% else %>
        <%= program.user.full_name %>
      <% end %>
    </h3>
    <div class="check-ins">
      <%= program.daily_checkmarks if program.start_date %>
    </div>
  </div>
  <% end %>
</div>

