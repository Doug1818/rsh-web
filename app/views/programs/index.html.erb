<div class="container">
  <div class="well">
    <div class="row">
      <div class="col-md-12">
        <h1>Listing Programs (<%= @programs.size %>)</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <% if @programs.present? %>
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Created</th>
                <th>User</th>
                <th>Purpose</th>
                <th></th>
              </tr>
            </thead>

            <tbody>
              <% @programs.each do |program| %>
              <tr>
                <td><%= program.created_at.strftime("%m/%d/%y") %></td>
                <td><%= program.user.full_name %></td>
                <td><%= program.purpose %></td>
                <td>
                  <%= link_to 'edit', edit_program_path(program) %> |
                  <%= link_to 'delete', program, data: { confirm: "Are you sure?" }, method: :delete %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>

          <%#= paginate @users %>
        <% else %>
          <br/>
          <p>No programs have been created yet.</p>
          <br/>
        <% end %>
      </div>
    </div>
  </div>
</div>

