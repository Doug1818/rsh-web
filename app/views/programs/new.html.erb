  <div class="row">
    <div class="col-md-12">
      <div class="well create">
        <h3 class="center">Add a New Client</h3><br>
        <%= simple_form_for @program, html: { class: "form-vertical new-program" } do |f| %>


          <%= f.fields_for :user do |f| %>
            <%= f.input :hipaa_compliant %>

            <div id="pii-fields-non-hipaa">
              <div class="row">
                <div class="col-md-12">
                  <%= f.input :full_name, label: false, placeholder: 'Name' %>
                </div>
              </div>
              <%= f.input :email, label: false, placeholder: 'Email Address', type: 'email' %>
            </div>
            <div id="pii-fields-hipaa" style="display: none;">
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group string required program_user_full_name">
                    <input type="text" name="full_name" class="string required form-control" placeholder="Name">
                  </div>
                </div>
              </div>
              <div class="form-group string required program_user_email">
                <input type="text" name="email" class="string required form-control" placeholder="Email Address">
              </div>
            </div>
          <% end %>
          <%= f.input :purpose, label: "I am here to...", as: :text, placeholder: 'Do what?' %>
          <%= f.input :goal, label: "So I can...", as: :text, placeholder: 'What will sticking to the plan enable you to do?' %>
          <div class="clearfix"></div>
        <div class="row">
          <div class="pull-right">
          <%= f.submit 'Add Client', class: 'btn btn-primary' %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
