<div class="container">
  <div class="row">
    <div class="col-md-12 center">
      <h3 class="middle">Add a New Patient</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 center">
      <ol class="breadcrumb">
        <li class="active"></li>
        <li></li>
        <li></li>
        <li></li>
      </ol>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="well create">
        <%= simple_form_for @program, html: { class: "form-vertical" } do |f| %>
          <%= f.fields_for :user do |f| %>
            <%= f.input :full_name, label: false, placeholder: 'Name' %>
            <%= f.input :email, label: false, placeholder: 'Email Address' %>
            <%= f.input :gender, collection: User::GENDERS, label: false, default: nil %>
          <% end %>
          <%= f.input :purpose, label: false, placeholder: 'Why are they here?' %>
          <%= f.input :goal, label: false, placeholder: 'In order to?' %>
          <div class="clearfix"></div>
        <div class="row">
          <div class="pull-right">
          <%= f.submit 'Add Patient', class: 'btn btn-primary' %>
          </div>
        </div>
        <% end %>
    </div>
  </div>
</div>
