<div class="container">
  <div class="col-md-12 center">
    <h3 class="middle">Add a New Patient</h3>
  </div>
  <div class="col-md-12">
    <%= simple_form_for @program, url: url_for(:action => 'update_big_steps', :controller => 'programs'), html: { class: "form-vertical" } do |f| %>
      <div id="program_big_steps">
        <%= f.simple_fields_for :big_steps do |big_step| %>
          <%= render 'big_step_fields', f: big_step %>
        <% end %>
        <div class="links">
          <br/>
          <%= link_to_add_association "<span class='glyphicon glyphicon-plus-sign'></span>".html_safe, f, :big_steps %>
        </div>
      </div>

      <br/><br/>

      <%= f.submit "Next", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
