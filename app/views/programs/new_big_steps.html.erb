<div class="container">
  <div class="row">
    <div class="col-md-12 center">
      <h3 class="middle">Add a New User</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 center">
      <ol class="breadcrumb">
        <li></li>
        <li></li>
        <li class="active"></li>
        <li></li>
      </ol>
    </div>
  </div>
  <div class="col-md-12">
    <div class="well create">
      <div class="col-md-12">
        <p>I am here to <%= @program.purpose.downcase %> so I can <%= @program.goal.downcase %>
        <br/>
        What Big Steps will get me closer to my goal?</p>
      </div>
      <%= simple_form_for @program, url: url_for(:action => 'update_big_steps', :controller => 'programs'), html: { class: "form-vertical" } do |f| %>
        <div id="program_big_steps">
          <%= f.simple_fields_for :big_steps do |big_step| %>
            <%= render 'big_step_fields', f: big_step %>
          <% end %>
          <div>
            <br/>
            <%= link_to_add_association "<span class='btn-plus'></span>".html_safe, f, :big_steps %>
          </div>
        </div>

        <br/><br/>
        <div class="row">
          <div class="pull-right">
            <%= f.submit "Next", class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
