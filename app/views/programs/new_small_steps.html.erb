<div class="container">
  <div class="row">
    <div class="col-md-12 center">
      <h3 class="middle">Add a New User</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 center">
      <ol class="breadcrumb">
        <li></li>
        <li></li>
        <li></li>
        <li class="active"></li>
      </ol>
    </div>
  </div>
  <div class="col-md-12">
    <div class="well">
      <h3>What small step(s) should I focus on in my first week?</h3>

      <%= simple_form_for @program, url: url_for(:action => 'update_small_steps', :controller => 'programs'), html: { class: "form-vertical" } do |f| %>

        <div id="program-weeks">
          <%= f.simple_fields_for :weeks do |week| %>
            <%= render 'week_fields', f: week %>
          <% end %>
        </div>

        <%= f.input :start_date, as: :string, input_html: { class: "datepicker" } %>
        <div class="row">
          <div class="pull-right">
            <%= f.submit "Next", class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
