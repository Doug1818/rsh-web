<div class="container">
  <div class="well">
    <div class="row">
      <div class="col-md-12">
        <h1>Listing Users (<%= @users.size %>)</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <% if @users.present? %>
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>First</th>
                <th>Last</th>
                <th>Email</th>
                <th>Programs</th>
                <th></th>
              </tr>
            </thead>

            <tbody>
              <% @users.each do |user| %>
              <tr>
                <td><%= user.first_name %></td>
                <td><%= user.last_name %></td>
                <td><%= user.email %></td>
                <td><%= user.programs.map { |program| program.purpose }.join(", ") %></td>
                <td>
                  <%= link_to 'edit', edit_user_path(user) %> |
                  <%= link_to 'delete', user, data: { confirm: "Are you sure?" }, method: :delete %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>

          <%#= paginate @users %>
        <% else %>
          <br/>
          <p>No users have been created yet.</p>
          <br/>
        <% end %>
      </div>
    </div>
  </div>
</div>

